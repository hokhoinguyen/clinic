@using Microsoft.AspNetCore.Http
@{
    <head>
        <title>@ViewBag.Title</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand">
                    <img src="https://res.cloudinary.com/dlxhvabif/image/upload/v1695273562/avatar/logoclinic_zoehix.png" class="rounded" alt="LogoClinic" width="80" height="80">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BenhNhan" asp-action="XemLichHen">Đặt lịch hẹn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BenhNhan" asp-action="ThongTinLichHen">Thông tin lịch hẹn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BenhNhan" asp-action="LichHenXacNhan">Lịch hẹn xác nhận</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="NguoiDung" asp-action="Register">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="NguoiDung" asp-action="Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BenhNhan" asp-action="CreateProfile">Cập nhật thông tin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="NguoiDung" asp-action="ConfirmLogout">Đăng xuất</a>
                        </li>
                    </ul>
                    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor ContextAccessor
                    @{
                        var context = ContextAccessor.HttpContext;
                    }

                    <ul class="navbar-nav ml-auto align-items-center">
                        @if (context.Session.GetInt32("MaQuyen") != null)
                        {
                            <li class="nav-item mr-5">
                                <a class="text-warning h5">Xin chào, @context.Session.GetString("TenDangNhap")</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid mt-3">
            @RenderBody()
        </div>

        <footer class="mt-4 p-5 bg-primary text-white rounded">
            <p>&copy; @DateTime.Now.Year Hồ Ngọc Khôi Nguyên. All rights reserved.</p>
            <ul>
                <li><a href="#" class="text-white">Privacy Policy</a></li>
                <li><a href="#" class="text-white">Terms of Service</a></li>
                <li><a href="#" class="text-white">Contact Us</a></li>
            </ul>
        </footer>
    </body>
}
