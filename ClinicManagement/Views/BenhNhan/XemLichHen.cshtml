
@{
    ViewData["Title"] = "XemLichHen";
    Layout = "~/Views/Shared/_LayoutNormal.cshtml";
}

<body>
    <div class="container mt-3">
        <h2 class="text-primary text-center">CHỌN LỊCH HẸN</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Số thứ tự</th>
                    <th>Ngày hẹn</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var LichHen in Model)
                {
                    <tr>
                        <td>@LichHen.MaLichHen</td>
                        <td>@LichHen.NgayGioHen.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@LichHen.TrangThai</td>
                        <td>
                            <a asp-controller="BenhNhan" asp-action="DangKyLichHen" asp-route-maLichHen="@LichHen.MaLichHen" class="btn btn-warning">Đăng ký</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

