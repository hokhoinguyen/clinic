
@{
    ViewData["Title"] = "ListYTa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <div class="container mt-3">
        <h2 class="text-primary text-center">DANH SÁCH Y TÁ</h2>
        <form asp-controller="YTa" asp-action="ListYTa" method="get" class="d-flex">
            <div class="input-group mb-3">
                <input type="text" class="form-control me-2" name="searchTerm" placeholder="Nhập tên y tá">
                <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            </div>
        </form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Họ</th>
                    <th>Tên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Bằng cấp</th>
                    <th>Chuyên môn</th>
                    <th>
                        <a type="button" class="btn btn-primary float-end" asp-controller="YTa" asp-action="CreateYTa">Thêm</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var YTa in Model)
                {
                    <tr>
                        <td>@YTa.MaYta</td>
                        <td>@YTa.Ho</td>
                        <td>@YTa.Ten</td>
                        <td>@YTa.NgaySinh.ToShortDateString()</td>
                        <td>@YTa.GioiTinh</td>
                        <td>@YTa.DiaChi</td>
                        <td>@YTa.SoDienThoai</td>
                        <td>@YTa.BangCap</td>
                        <td>@YTa.ChuyenMon</td>
                        <td>
                            <a asp-controller="YTa" asp-action="EditYTa" asp-route-id="@YTa.MaYta" class="btn btn-warning">Sửa</a>
                        </td>
                        <td>
                            <a asp-controller="YTa" asp-action="DeleteYTa" asp-route-id="@YTa.MaYta" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

